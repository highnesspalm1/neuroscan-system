{
  "version": 2,
  "framework": "vite",
  "buildCommand": "cd WebFrontend && npm ci && npm run build",
  "outputDirectory": "WebFrontend/dist",
  "installCommand": "cd WebFrontend && npm ci",
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://neuroscan-api.onrender.com",
    "VITE_ENVIRONMENT": "production"
  }
}
