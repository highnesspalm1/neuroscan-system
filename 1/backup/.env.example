# NeuroScan Environment Configuration Template
# Copy this file to .env and update the values for your deployment

# Project Configuration
COMPOSE_PROJECT_NAME=neuroscan

# Database Configuration
POSTGRES_DB=neuroscan_db
POSTGRES_USER=neuroscan
POSTGRES_PASSWORD=change_this_secure_password_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://neuroscan:change_this_secure_password_in_production@postgres:5432/neuroscan_db

# Backend API Configuration
JWT_SECRET_KEY=change_this_to_a_secure_random_string_for_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENVIRONMENT=production
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=NeuroScan
VITE_ENVIRONMENT=production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_in_production
REDIS_URL=redis://:change_this_redis_password_in_production@redis:6379/0

# File Upload Configuration
MAX_UPLOAD_SIZE=50MB
UPLOAD_DIRECTORY=/app/uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,gif

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@neuroscan.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_EXPIRE_HOURS=24
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/nginx.crt
SSL_KEY_PATH=/etc/nginx/ssl/nginx.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=/app/backups

# Monitoring Configuration
METRICS_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Only (set to false in production)
AUTO_RELOAD=false
SHOW_DOCS=false
