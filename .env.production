# Cloud Environment Configuration for Production
ENVIRONMENT=production
DEBUG=false

# Security
JWT_SECRET_KEY=your-secure-jwt-secret-key-replace-in-production
CORS_ORIGINS=https://neuroscan.vercel.app,https://verify.neuroscan.vercel.app,https://portal.neuroscan.vercel.app

# Database (will be set by Render automatically)
# DATABASE_URL=postgresql://user:password@host:port/database
# REDIS_URL=redis://host:port

# API Configuration
API_TITLE=NeuroScan Authentication API
API_VERSION=1.0.0
API_DESCRIPTION=Premium Product Authentication System

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@neuroscan.io

# Monitoring
SENTRY_DSN=
LOG_LEVEL=INFO
